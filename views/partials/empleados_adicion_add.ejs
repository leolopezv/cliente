<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
   <p class="h2 text-center mt-4">Agregar Foto</p>
   <div class="row mt-4 ">
      <div class="col-md-4 mx-auto">
         <div class="myform form ">
            <form action="/employees/save" method="post" name="add">
               <div class="form-group mt-2">
                  <input type="text" name="user"  class="form-control" id="user" placeholder="Usuario" required="required">
               </div>
               <div class="form-group mt-2">
                  <input type="text" name="name"  class="form-control" id="name" placeholder="Nombre" required="required">
               </div>
               <div class="form-group mt-2">
                  <input type="text" name="surname"  class="form-control" id="surname" placeholder="Apellido" required="required">
               </div>
               <div class="form-group mt-2">
                  <input type="text" name="profile"  class="form-control" id="profile" placeholder="Perfil" required="required">
               </div>
               <div class="text-center mt-4">
                  <button type="submit" class="btn btn-primary">Add</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</main>